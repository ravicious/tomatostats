- content_for :sidebar do
  = render 'projects/sidebar'
  = render 'stats_sidebar'

%h1 Your pomodoros

= form_tag destroy_multiple_or_assign_pomodoros_path, method: :post, class: 'inline' do
  .input-prepend
    = button_tag glyph(:remove) + " Delete pomodoros", class: 'btn', name: 'delete_multiple', data: { confirm: "Are you sure?" }
  .input-append
    .add-on Project
    = select_tag "Project", options_from_collection_for_select(projects, "id", "name"), name: "project"
    = button_tag glyph(:tags, :white) + " Assign pomodoros", class: 'btn', name: 'assign'
  = render 'table'
