- content_for :sidebar do
  = render 'projects/sidebar'
  = sidebar do
    %h3 Stats
    %ul.stats.nav.nav-list
      %li= "#{pomodoros.done_this_week.size} pomodoros this week"
      %li= "#{pomodoros.done_this_month.size} pomodoros this month"
      %li= "#{pomodoros.size} pomodoros in overall"

%h1 Your pomodoros

= form_tag destroy_multiple_pomodoros_path, method: :delete do
  = submit_tag "Delete selected", class: 'btn'
  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th
        %th Started at
        %th Finished at
        %th Duration
    %tbody.pomodoros
      - pomodoros.each do |pomodoro|
        %tr
          %td= check_box_tag "pomodoros[]", pomodoro.id, false, id: "pomodoro-#{pomodoro.id}"
          %td= Time.at(pomodoro.started_at).to_s(:short)
          %td= Time.at(pomodoro.finished_at).to_s(:short)
          %td= pomodoro.duration[:diff]

